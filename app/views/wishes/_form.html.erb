<% if @wish.errors.any? %>
  <ul>
    <% @wish.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@user, @wish], url: user_wish_path, html: {multipart:true} do |f| %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <br><br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br><br>
  <%= f.label :link %>
  <%= f.text_field :link %>
  <br><br>
  <%= f.label :price %>
  <%= f.text_field :price %> â‚¬
  <br><br>
  <%= f.button %>
  <%= link_to 'Cancel', user_wishes_path(@user) %>
<% end %>
<br>
<a href="/users/<%= @user.id %>/wishes/">Back to wishes</a>
