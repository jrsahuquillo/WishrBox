<h1>WishrBox de <%= @user.name %></h1>
<%= image_tag @user.avatar.url(:thumb) %>
<hr>
<ul>
<% @wishes.each do |wish| %>
  <li>
    <%= link_to image_tag(wish.image.url(:thumb)), user_wish_path(@user, wish) %>
    <%= wish.title %>
    <% if wish.favorite? %>
      &#11088
    <% end %>
    <% if wish.locked? %>
      &#128274
    <% else %>
        &#128275
    <% end %>
  </li>
  <br><br>
  <% end %>

<% unless @user != current_user %>
  <%= link_to 'AÃ±adir deseo >> ', new_user_wish_path(@user, @wish) %><br><br>
<% end %>
<%= link_to 'Mi WishrBox >> ', user_wishes_path(current_user) %><br><br>
<%= link_to 'Ver perfil usuario >> ', profile_path(@user) %><br><br>
<%= link_to "Buscar amigo>> ", search_following_path %><br><br>

<% unless @user == current_user %>
<% @followed = Following.find_by(user_id: current_user.id, follow_id: @user.id) %>
  <% unless @followed == nil %>
    <%= link_to "Dejar de seguir a #{@user.name}>> ", user_nofollow_path(current_user, @user), method: :post %>
  <% else %>
    <%= link_to "Seguir a #{@user.name}>> ", user_follow_path(current_user, @user), method: :post %> <br><br>
  <% end %>
<% end %>
</ul>
