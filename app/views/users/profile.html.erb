<div class="content profile">

  <ul>
    <div class="user-profile">
      <%= image_tag current_user.avatar.url(:medium), class: "avatar-lg" %>
    </div>

    <li>
      <b>Nombre:</b>
      <%= current_user.name %>
    </li>
    <br>
    <li>
      <b>Cumplea√±os:</b>
      <% if current_user.birthday.present? %>
      <%= current_user.birthday.strftime("%d-%m-%Y") %>
      <% end %>
    </li>
    <br>
    <li>
      <b>Preferencias:</b>
      <% if current_user.preferences.present? %>
      <%= current_user.preferences %>
      <% end %>
    </li>
    <br><br>
    <% unless @user != current_user %>
    <%= link_to 'Editar perfil', edit_user_path(current_user), class:"waves-effect waves-light btn" %><br>
    <% end %>
  </ul>
</div>
</div>
