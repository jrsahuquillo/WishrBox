<h1>Edit user to <%=@user.name %>, ID: <%=  @user.id  %></h1>
<hr>


<%= form_for [@user] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :birthday %>
  <%= f.date_field :birthday %>
  <br><br>
  <%= f.label :preferences %>
  <%= f.text_area :preferences %>
  <br><br>
  <%= f.button %>
  <%= link_to 'Cancel', profile_path(@user) %>
<% end %>
<br>
<%= link_to 'My WishrBox', user_wishes_path(@user) %>
